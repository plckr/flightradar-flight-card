{
  "git": {
    "commitMessage": "Release v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true,
    "assets": ["dist/flightradar-flight-card.js"],
    "draft": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["npm run validate", "npm run build"]
  }
}
